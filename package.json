{
  "name": "pomodoro-timer",
  "description": "\"Pomodoro Timer\" is a tool that uses the pomodoro technique \"a time management technique\" to help you managing your time better.",
  "version": "0.1.0",
  "private": false,
  "main": "public/electron.js",
  "homepage": "./",
  "license": "GPL-3.0",
  "dependencies": {
    "bootstrap": "^4.3.1",
    "electron-is-dev": "^1.1.0",
    "prop-types": "^15.7.2",
    "react": "^16.9.0",
    "react-dom": "^16.9.0",
    "react-icons": "^3.7.0",
    "react-scripts": "3.1.0",
    "speak-tts": "^2.0.8",
    "styled-components": "^4.3.2"
  },
  "scripts": {
    "start": "react-scripts start",
    "build": "react-scripts build",
    "test": "react-scripts test",
    "eject": "react-scripts eject",
    "electron-dev": "concurrently \"BROWSER=none yarn start\" \"wait-on http://localhost:3000 && electron .\"",
    "postinstall": "electron-builder install-app-deps",
    "preelectron-pack": "yarn run build",
    "electron-pack": "electron-builder -mw",
    "test-pack": "electron-builder --dir"
  },
  "eslintConfig": {
    "extends": "react-app"
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "devDependencies": {
    "electron": "^6.0.2"
  },
  "author": {
    "name": "Mehdi Nassim KHODJA",
    "email": "fm_khodja@esi.dz",
    "url": "https://devpost.com/MehdiNassim"
  },
  "build": {
    "appId": "com.mehdinassim.promodoro",
    "productName": "Promodoro Timer",
    "copyright": "Copyright Â© 2019 ${author}",
    "mac": {
      "category": "public.app-category.utilities"
    },
    "win": {
      "target": "nsis",
      "icon": "src/assets/appIcons/256x256.png"
    },
    "linux": {
      "target": [
        "deb",
        "AppImage"
      ],
      "icon": "src/assets/appIcons/256x256.png"
    },
    "files": [
      "public/electron.js",
      "build/**/*",
      "node_modules/**/*"
    ],
    "directories": {
      "buildResources": "src/assets/appIcons"
    },
    "publish": {
      "provider": "github",
      "repo": "promodoro-timer-desktop",
      "owner": "MehdiNassim"
    }
  }
}
